<!-- Error Page Template -->
<div class="container-fluid container-fluid-custom" style="height: 96vh;">
    <main>
        <div class="row justify-content-center">
            <!-- Wrapper Column -->
            <div class="col-12 col-md-8 d-flex flex-column align-items-center text-center">
                <!-- Title -->
                <h1 class="display-2 fw-bold mb-4">
                    <%= errorTitle || "Something went wrong" %>
                </h1>

                <!-- Message -->
                <p class="fs-5 text-muted">
                    <%= errorMessage || "An unexpected error occurred. Please try again later." %>
                </p>

                <!-- Back Button using browser history -->
                <button class="btn btn-primary mt-3" onclick="window.history.back()">Go Back</button>

            </div>
        </div>
    </main>
</div>