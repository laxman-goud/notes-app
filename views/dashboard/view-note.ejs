<div class="container-fluid container-fluid-custom pb-5 mb-5">

    <!-- Breadcrumb and Page Title -->
    <div class="row mb-4">
        <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= note.title %></li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3">View Note</h1>
            <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" id="deleteButton"
            data-bs-target="#deleteModal">Delete</button>
        </div>
        </div>
    </div>

    <!-- Edit Note Form -->
    <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST" class="position-relative">
        
        <!-- Title Input -->
        <div class="form-group mb-4 position-absolute" style="left: 1px; top: 1px; right: 1px;">
        <input
            type="text"
            class="form-control fw-bold border-0 fs-4"
            id="title"
            name="title"
            value="<%= note.title %>"
            placeholder="Title"
            required
        >
        </div>

        <!-- Body Textarea -->
        <div class="form-group mb-4">
        <textarea
            name="body"
            id="body"
            class="form-control pt-5 fs-4"
            placeholder="Take a note..."
            rows="11"
            required
        ><%= note.body %></textarea>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg" style="margin-bottom: 4rem;">Update</button>
        </div>
    </form>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">You are about to delete a note</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
            <p>
            This will delete your note <b class="fw-bold"><%= note.title %></b><br>
            Are you sure?
            </p>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

            <!-- Delete Form -->
            <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete Note</button>
            </form>
        </div>

        </div>
    </div>
</div>
