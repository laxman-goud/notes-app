<div class="container-fluid container-fluid-custom pb-5 mb-5">

    <!-- Top bar -->
    <div class="row mb-4">
        <div class="col">
            <h1>Hey, <%= userName %></h1>
        </div>
        <div class="col text-end">
            <a href="/dashboard/add" class="btn btn-primary">+ New Note</a>
        </div>
    </div>

    <!-- Notes list -->
    <div class="row">
        <% if (notes.length > 0) { %>
            <% for (let i = 0; i < notes.length; i++) { %>
                <div class="col-sm-3 mb-4">
                    <div class="card border-primary" style="min-width: 210px;">
                        <a href="/dashboard/item/<%= notes[i]._id %>" class="card-body text-decoration-none">
                            <h5 class="card-title"><%= notes[i].title %></h5>
                            <p class="card-text"><%= notes[i].body %></p>
                        </a>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <!-- No notes -->
            <div class="row">
                <div class="col-3 d-none d-lg-block">
                    <img src="/img/human-3.svg" alt="Human pointing head towards a create button" class="img-fluid">
                </div>
                <div class="col mt-md-4">
                    <h2>Okay...</h2>
                    <h2>Let's start with your first notes! <br><br>
                        <a href="/dashboard/add">Create one!</a>
                    </h2>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination -->
    <% if (notes.length > 0) { %>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center mt-5">

                <!-- Previous / First -->
                <% if (current > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/dashboard?page=<%= current - 1 %>">Previous</a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                <% } %>

                <!-- Start page index -->
                <% let startPage = current > 5 ? current - 4 : 1; %>
                <% if (startPage > 1) { %>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
                <% } %>

                <!-- Page numbers -->
                <% for (let i = startPage; i <= current + 4 && i <= pages; i++) { %>
                    <% if (i === current) { %>
                        <li class="page-item active">
                            <a class="page-link" href="#"><%= i %></a>
                        </li>
                    <% } else { %>
                        <li class="page-item">
                            <a class="page-link" href="/dashboard?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                <% } %>

                <% if (current + 4 < pages) { %>
                    <li class="page-item"><a class="page-link" href="#">...</a></li>
                <% } %>

                <!-- Next / Last -->
                <% if (current < pages) { %>
                    <li class="page-item">
                        <a class="page-link" href="/dashboard?page=<%= current + 1 %>">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/dashboard?page=<%= pages %>">Last</a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Next</a>
                    </li>
                <% } %>

            </ul>
        </nav>
    <% } %>

</div>
