<div class="container-fluid">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4">
        <!-- Brand -->
        <a href="/"
            class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-primary text-decoration-none fw-bold fs-2">
            NodeNote
        </a>

        <!-- Nav Links -->
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="/" class="nav-link px-2 <%= (path === '/') ? 'link-secondary' : 'link-dark' %>">Home</a></li>
            <li><a href="/features" class="nav-link px-2 <%= (path === '/features') ? 'link-secondary' : 'link-dark' %>">Features</a></li>
            <li><a href="/faqs" class="nav-link px-2 <%= (path === '/faqs') ? 'link-secondary' : 'link-dark' %>">FAQs</a></li>
            <li><a href="/about" class="nav-link px-2 <%= (path === '/about') ? 'link-secondary' : 'link-dark' %>">About</a></li>
        </ul>

        <!-- Auth Section -->
        <div class="col-md-3 text-end">
            <% if (user) { %>
                <% if (user.profileImage) { %>
                    <img src="<%= user.profileImage %>" 
                        alt="Profile"
                        class="rounded-circle"
                        style="width: 40px; height: 40px; object-fit: cover;"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';">
                    <i class="bi bi-person-circle fs-3 d-none align-middle"></i>
                <% } else { %>
                    <i class="bi bi-person-circle fs-3 align-middle"></i>
                <% } %>
                <span class="me-3">Welcome, <%= user.firstName %></span>
                <a href="/logout" class="btn btn-outline-danger">Logout</a>
            <% } else { %>
                <a href="/auth/google" class="btn btn-outline-primary me-2">Sign-In</a>
                <a href="/auth/google" class="btn btn-primary">Sign-Up</a>
            <% } %>
        </div>
    </header>
</div>